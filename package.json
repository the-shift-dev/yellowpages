{
  "name": "yellowpages-cli",
  "version": "0.1.0",
  "description": "Service catalog for AI coding agents. Look it up before you break it.",
  "type": "module",
  "main": "dist/main.js",
  "bin": {
    "yp": "./dist/main.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "dev": "npx tsx src/main.ts",
    "build:bun": "bun build --compile src/main.ts --outfile yp",
    "build:bun-linux": "bun build --compile --target=bun-linux-x64 src/main.ts --outfile yp-linux-x64",
    "build:bun-mac-arm": "bun build --compile --target=bun-darwin-arm64 src/main.ts --outfile yp-darwin-arm64",
    "build:bun-mac-x64": "bun build --compile --target=bun-darwin-x64 src/main.ts --outfile yp-darwin-x64",
    "test": "bun test",
    "format": "bunx biome format --write src/",
    "lint": "bunx biome lint src/",
    "check": "bunx biome check src/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the-shift-dev/yellowpages.git"
  },
  "homepage": "https://github.com/the-shift-dev/yellowpages#readme",
  "bugs": {
    "url": "https://github.com/the-shift-dev/yellowpages/issues"
  },
  "keywords": [
    "service-catalog",
    "cli",
    "agent",
    "ai",
    "infrastructure",
    "backstage",
    "developer-tools",
    "claude",
    "cursor",
    "aider"
  ],
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@types/js-yaml": "^4.0.9",
    "typescript": "^5.8.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "js-yaml": "^4.1.0",
    "minisearch": "^7.1.2",
    "nanoid": "^5.1.6"
  }
}
